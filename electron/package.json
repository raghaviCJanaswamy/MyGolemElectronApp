{
  "name": "my-golem-electron",
  "version": "1.0.0",
  "description": "Electron wrapper for Golem Shiny app with R.framework bundled",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "fix-rframework": "bash scripts/pre_build_fix_rframework.sh",
    "build": "electron-builder",
    "prod-build": "npm run fix-rframework && npm run build",
    "post-build-check": "bash scripts/post_build_check.sh"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.test.golemapp",

    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb", "tar.gz"]
    },

    "files": [
      "main.js",
      "error.html",
      "resources/**"
    ],
    "extraResources": [
      {
        "from": "electron/resources/R.framework",
        "to": "R.framework"
      },
      {
        "from": "app",
        "to": "app"
      }
    ],
    "asar": false
  }
}
